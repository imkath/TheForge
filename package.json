{
  "name": "the-forge",
  "version": "1.0.0",
  "description": "Micro-SaaS Opportunity Forge - AI-powered business opportunity detection",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && wrangler pages deploy dist",
    "worker:dev": "cd workers/api-proxy && wrangler dev",
    "worker:deploy": "cd workers/api-proxy && wrangler deploy"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "firebase": "^10.7.1",
    "lucide-react": "^0.303.0",
    "framer-motion": "^10.18.0",
    "zustand": "^4.4.7",
    "clsx": "^2.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wrangler": "^3.24.0"
  }
}
